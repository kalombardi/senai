package exercicios;

import java.util.Scanner;

public class ex03 {
	public static Scanner entrada;
	public static void main(String[] args) {
		entrada = new Scanner (System.in);
		
		int n;
		
		System.out.print("Digite um número: ");
		n = entrada.nextInt();
		
		System.out.print(n + "+ 1 = " + (n+1));

	}

}
