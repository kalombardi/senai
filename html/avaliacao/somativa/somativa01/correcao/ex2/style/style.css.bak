*{
	margin: 0;
	padding: 0;
}

body{
	background-color: aqua;
	height: 100%;
}

.titulo{
	font-size: 30px;
	font-weight: bold;
	margin: 50px;
}

table{
	background-color: #fff; /*branco*/
	margin-top: 150px;
}

.fundo{
	background-image: url(../img/ceu.jpg);
	padding: 50px;
}

th{
	font-size: 20px;
	padding: 10px;
}

td{
	padding: 10px 5px; /*quando define só um valor, ele pega todos os lados, sequência: em cima embaixo, depois aos lados, 1° cima, 2° 
						direita, 3° embaixo, 4° esquerda, sentido horário. Pode colocar 0 na sequência que não quer*/
}

a{
	text-decoration: none;
	color: #000; /*black*/
	cursor: pointer;
}

.min{
	color: blue;
	text-align: center;
}

.chuva{
	color: grey;
	text-align: center;
}

button{
	margin: 100px 20px;/*quando define só um valor, ele pega todos os lados, sequência: em cima embaixo, depois aos lados, 1° cima, 2° 
						direita, 3° embaixo, 4° esquerda, sentido horário. Pode colocar 0 na sequência que não quer*/
	padding: 15px;
	background-color: #fff;
	font-size: 18px;
	cursor: unset;
}